#!/usr/bin/env sh
# Run tests before pushing
pnpm run test

# Run typecheck before pushing
pnpm run typecheck

# Typecheck scripts (bun-based scripts like sync-cli-api.ts)
pnpm run typecheck:scripts

# Build CLI to verify it compiles correctly
# Note: Next.js webapp build is excluded as it interferes with dev server
pnpm --filter chatroom-cli build