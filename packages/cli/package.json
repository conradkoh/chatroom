{
  "name": "chatroom-cli",
  "version": "1.0.76",
  "description": "CLI for multi-agent chatroom collaboration",
  "type": "module",
  "bin": {
    "chatroom": "./dist/index.js"
  },
  "scripts": {
    "build": "bun run typecheck && bun build src/index.ts --outdir dist --target node --format esm",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "chatroom": "bun run src/index.ts",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "convex": "^1.31.0",
    "convex-helpers": "^0.1.108"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@workspace/backend": "workspace:*",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "cli",
    "chatroom",
    "multi-agent",
    "convex"
  ],
  "author": "",
  "license": "Elastic-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/conradkoh/chatroom"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ]
}
